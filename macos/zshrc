if [ -d /usr/local/go/bin ] ; then
    export PATH="$PATH:/usr/local/go/bin:$HOME/go/bin"
fi


# Mas se houver o neovim, melhor ainda ðŸ¥³
if [ -f /usr/local/bin/nvim ] ; then
    alias vi="nvim"
    alias vim="nvim"
else
    # Se o gvim esta instalado da preferencia ðŸ˜‰
    if [ -f /usr/local/bin/gvim ] ; then
        alias vi="gvim"
        alias vim="gvim"
    fi
fi

if [ -d /usr/local/opt/llvm/bin ] ; then
#    export LDFLAGS="-L/usr/local/opt/llvm/lib -Wl,-rpath,/usr/local/opt/llvm/lib -L/usr/local/opt/libffi/lib $LDFLAGS"
    export PATH="$PATH:/usr/local/opt/llvm/bin"
fi

if [ -d /usr/local/opt/openjdk ] ; then
    export PATH="/usr/local/opt/openjdk/bin:$PATH"
fi
